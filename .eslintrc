{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "plugins": ["redux-saga", "react", "jsx-a11y"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/forbid-prop-types" : 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./tools/webpack/webpack.prod.babel.js"
      }
    }
  }
}
